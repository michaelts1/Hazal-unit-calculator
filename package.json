{
	"name": "hazal-unit-calculator",
	"version": "0.0.1",
	"description": "Web-based calculator for converting different units of measurement from Haza\"l era to other units",
	"main": "src/index.ts",
	"author": "Michael Tsaban",
	"license": "MIT",
	"scripts": {
		"lint": "eslint src --ext .js --ext .ts --ext .vue",
		"test": "vitest run",
		"compile": "(rm -fr dist || (rmdir dist /s /q || echo clean)) && webpack --mode production && sass src/scss:dist/css",
		"build": "npm run lint && npm run test && npm run compile",
		"sass-watch": "sass --watch src/scss:dist/css",
		"webpack-serve": "webpack serve",
		"watch": "run-p sass-watch webpack-serve"
	},
	"devDependencies": {
		"@types/firefox": "^0.0.31",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"@vitejs/plugin-vue": "^2.2.4",
		"@vue/test-utils": "^2.0.0-rc.17",
		"c8": "^7.11.0",
		"copy-webpack-plugin": "^10.2.4",
		"css-loader": "^6.6.0",
		"eslint": "^8.9.0",
		"eslint-plugin-vue": "^8.4.1",
		"jsdom": "^19.0.0",
		"npm-run-all": "^4.1.5",
		"sass": "^1.49.8",
		"sass-loader": "^12.6.0",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.2.6",
		"tsc": "^2.0.4",
		"vite": "^2.8.5",
		"vitest": "^0.5.7",
		"vue": "^3.2.31",
		"vue-loader": "^17.0.0",
		"vue-style-loader": "^4.1.3",
		"webpack": "^5.69.1",
		"webpack-cli": "^4.9.2",
		"webpack-dev-server": "^4.7.4"
	}
}
