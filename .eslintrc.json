{
	"env": {
		"es2022": true,
		"browser": true
	},

	"parser": "vue-eslint-parser",

	"parserOptions": {
		"ecmaVersion": 2022,
		"parser": "@typescript-eslint/parser"
	},

	"plugins": [
		"eslint-plugin-vue",
		"@typescript-eslint"
	],

	"ignorePatterns": [ "webpack.config.js", "*.d.ts" ],

	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-recommended",
		"plugin:@typescript-eslint/recommended"
	],

	"rules": {
		"comma-dangle" : [
			"error",
			"always-multiline"
		],
		"eol-last": [
			"error",
			"always"
		],
		"eqeqeq": "error",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase" : 1
			}
		],
		"init-declarations": [
			"error",
			"always"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"keyword-spacing": "error",
		"no-constant-condition": [
			"error",
			{
				"checkLoops": false
			}
		],
		"no-eval": "error",
		"no-implied-eval": "error",
		"no-inner-declarations": "off",
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1
			}
		],
		"no-prototype-builtins": "off",
		"no-sequences": "error",
		"no-trailing-spaces": "error",
		"no-unsafe-optional-chaining" : "error",
		"@typescript-eslint/no-use-before-define": [
			"error",
			{
				"functions": false,
				"classes": false,
				"variables": true
			}
		],
		"no-var": "error",
		"prefer-const": "error",
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			"error",
			"never"
		],
		"sort-imports": [
			"error",
			{
				"ignoreCase": true
			}
		],
		"space-before-blocks" : "error",
		"strict": [
			"error",
			"global"
		],
		"vue/block-tag-newline": [
			"error",
			{
				"singleline": "never",
				"multiline": "always"
			}
		],
		"vue/html-indent": [
			"error",
			"tab"
		],
		"vue/match-component-file-name": [
			"error",
			{
				"shouldMatchCase": false
			}
		],
		"vue/no-unused-properties": [
			"error",
			{
				"groups": [
					"props",
					"data",
					"computed",
					"methods",
					"setup"
				]
			}
		]
	}
}
